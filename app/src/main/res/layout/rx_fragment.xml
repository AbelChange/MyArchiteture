<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".logic.rx.RxFragment">

    <EditText
        android:inputType="text"
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textViewRealSearch"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
            android:id="@+id/btnFlatMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="flatmap"
            app:layout_constraintEnd_toEndOf="@+id/textViewSpeed"
            app:layout_constraintStart_toStartOf="@+id/textViewSpeed"
            app:layout_constraintTop_toBottomOf="@+id/textViewSpeed">
    </Button>

    <Button
            android:id="@+id/btnConcatMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="concatMap"
            app:layout_constraintEnd_toEndOf="@+id/textViewSpeed"
            app:layout_constraintStart_toStartOf="@+id/textViewSpeed"
            app:layout_constraintTop_toBottomOf="@+id/textViewSpeed">
    </Button>
</LinearLayout>