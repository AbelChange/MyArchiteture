<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
            android:text="startBind"
            android:layout_marginTop="70dp"
            android:id="@+id/startBind"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </Button>


    <Button
            android:text="startCall"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/startCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/startBind">
    </Button>

    <Button
            android:text="startBindCustom"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/startBindCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/startCall">
    </Button>


    <TextView
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/startCall"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/textView"
            android:gravity="center"
            android:text="dasdasdasd"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>