<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/bg_common_btn</item>
        <item name="android:stateListAnimator">@null</item>
        <!--        <item name="shapeAppearanceOverlay">@style/one_rounded</item>-->
    </style>

    <style name="Widget.App.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="Widget.App.ImageButton" parent="">
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

    <style name="Widget.App.Recyclerview" parent="">
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="">
<!--        <item name="itemActiveIndicatorStyle">@null</item>-->
        <item name="itemRippleColor">@color/transparent</item>
    </style>


</resources>