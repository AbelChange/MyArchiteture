<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTintMode">src_atop</item>
        <item name="backgroundTint">@color/bg_common_btn</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">20dp</item>
<!--        <item name="shapeAppearanceOverlay">@style/one_rounded</item>-->
    </style>


    <style name="one_rounded_btn">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <!--        <item name="cornerSizeTopLeft">50%</item>-->
        <!--        <item name="cornerSizeTopRight">50%</item>-->
    </style>

    <style name="ImageButton">
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="BottomDialogTheme" parent="BaseDialogTheme">
        <item name="titleEnabled">false</item>
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

</resources>