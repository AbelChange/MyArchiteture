<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetEndWithActions">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <!--toolbar paddingStart-->
        <item name="android:paddingLeft">@dimen/tool_bar_default_padding_start_material</item>
        <item name="android:paddingStart">@dimen/tool_bar_default_padding_start_material</item>
        <!--toolbar paddingEnd-->
        <item name="android:paddingRight">@dimen/tool_bar_default_padding_end_material</item>
        <item name="android:paddingEnd">@dimen/tool_bar_default_padding_end_material</item>
    </style>

    <style name="TabLayoutNormal" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMinWidth">150dp</item>
        <item name="tabTextAppearance">?attr/textAppearanceButton</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabIndicatorFullWidth">false</item>
        <!--        <item name="tabIndicatorColor">@color/common_brand_primary</item>-->
        <!--        <item name="tabIndicator">@drawable/tab_indicator</item>-->
        <!--        <item name="tabSelectedTextColor">@color/common_brand_primary</item>-->
        <!--        <item name="tabTextColor">@color/common_font_font_secondary</item>-->
        <item name="tabRippleColor">@color/transparent</item>
    </style>


    <style name="ShapeAppearance" parent="ShapeAppearance.M3.Sys.Shape.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_full</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/bg_common_btn</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="shapeAppearance">@style/ShapeAppearance</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>


    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:tint">@color/image_button_tint</item>
        <item name="android:minWidth">@dimen/image_button_min_width</item>
        <item name="android:minHeight">@dimen/image_button_min_width</item>
        <item name="android:scaleType">center</item>
    </style>

    <!--Toolbar 加了背景-->
    <style name="ImageButton.InToolBar">
        <item name="android:background">@drawable/bg_img_btn</item>
    </style>


    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

    <style name="ScrollView" parent="android:Widget.Material.ScrollView">
        <!--自动隐藏滚动条-->
        <item name="android:fadeScrollbars">true</item>
        <!--尽量不要使用xxxInset 会影响内容区域的布局-->
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:overScrollMode">never</item>
        <!--边缘模糊效果-->
        <item name="android:fadingEdgeLength">50dp</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track_vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb_vertical</item>
    </style>


    <style name="Recyclerview" parent="ScrollView">
        <item name="android:scrollbars">none</item>
        <!--自动隐藏滚动条-->
        <item name="android:fadeScrollbars">true</item>
        <!--尽量不要使用xxxInset 会影响内容区域的布局-->
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <!--列表view边缘模糊效果-->
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">0dp</item>
    </style>


    <style name="Recyclerview.Vertical">
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track_vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb_vertical</item>
        <item name="android:scrollbarSize">4dp</item>
        <!--自动隐藏滚动条-->
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="Recyclerview.Horizontal">
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TextAppearance.Title" parent="android:TextAppearance.Material.Title">
        <item name="android:textSize">?android:attr/textSize</item>
        <item name="android:fontFamily">?android:attr/fontFamily</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="TextAppearance.HeadLine" parent="android:TextAppearance.Material.Headline">
        <item name="android:textSize">?android:attr/textSize</item>
        <item name="android:fontFamily">?android:attr/fontFamily</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <!--        <item name="itemActiveIndicatorStyle">@null</item>-->
        <item name="itemRippleColor">@color/transparent</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="showText">false</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="thumbTint">@color/switch_thumb_tint</item>
        <item name="track">@drawable/switch_track</item>
        <item name="trackTint">@color/switch_track_tint</item>
    </style>

    <style name="MaterialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerThickness">1px</item>
        <item name="lastItemDecorated">false</item>
        <item name="dividerInsetStart">0dp</item>
        <item name="dividerInsetEnd">0dp</item>
    </style>

    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:clipChildren">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">4dp</item>
    </style>

</resources>