<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="BaseTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="toolbarStyle">@style/ToolBar</item>
        <item name="recyclerViewStyle">@style/Recyclerview</item>
        <item name="switchStyle">@style/SwitchStyle</item>
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="cardViewStyle">@style/CardView</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="materialButtonOutlinedStyle">@style/OutlinedButton</item>
        <item name="materialButtonToggleGroupStyle">@style/Widget.Material3.MaterialButtonToggleGroup</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="toolbarNavigationButtonStyle">@style/ImageButton.InToolBar</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
    </style>

    <style name="BaseTheme.Transparent" parent="BaseTheme">
        <item name="android:colorEdgeEffect">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
    </style>

    <style name="SplashTheme" parent="BaseTheme.Transparent">
        <item name="android:windowDisablePreview">true</item>
        <!--这里替换闪屏图片-->
        <item name="android:windowBackground">@mipmap/splash_chinese_bg</item>
    </style>

    <style name="DialogTheme.Base" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:imageButtonStyle">@style/ImageButton</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="checkboxStyle">@style/Widget.Material3.CompoundButton.CheckBox</item>
        <item name="recyclerViewStyle">@style/Recyclerview</item>
        <item name="android:scrollViewStyle">@style/ScrollView</item>
        <item name="materialDividerStyle">@style/MaterialDivider</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fast_fade_in</item>
        <item name="android:windowExitAnimation">@anim/fast_fade_out</item>
    </style>

    <style name="DialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_sheet_exit</item>
    </style>

    <style name="DialogTheme.Fade" parent="DialogTheme.Base">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/DialogFadeAnimation</item>
    </style>

    <style name="DialogTheme.Sheet" parent="DialogTheme.Base">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/DialogSheetAnimation</item>
    </style>

</resources>