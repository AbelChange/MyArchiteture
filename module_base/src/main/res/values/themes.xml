<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="FullScreenAcTheme" parent="AppTheme">
        <!--这里替换闪屏图片-->
        <item name="android:colorEdgeEffect">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <!--    android10以上版本禁用系统栏视觉保护，使导航栏纯透明（可选） -->
<!--        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>-->
    </style>

    <style name="SplashTheme" parent="FullScreenAcTheme">
        <!--这里替换闪屏图片-->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@mipmap/splash_chinese_bg</item>
    </style>


    <style name="BaseDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="checkboxStyle">@style/Widget.Material3.CompoundButton.CheckBox</item>
        <item name="recyclerViewStyle">@style/recyclerview</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomDialogTheme" parent="BaseDialogTheme">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>

</resources>